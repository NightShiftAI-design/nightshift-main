{
  "version": 2,
  "public": "public",
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "*.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/public/assets/$1" },
    { "src": "/dashboard/(.*)", "dest": "/public/dashboard/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
